<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/substitution_all_entry_textViewCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_weight="@integer/substitution_all_course"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/substitution_all_entry_textViewHour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="@integer/substitution_all_hour"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/substitution_all_entry_textViewSubject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="@integer/substitution_all_subject"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/substitution_all_entry_textViewTeacher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="@integer/substitution_all_teacher"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/substitution_all_entry_textViewRoom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_weight="@integer/substitution_all_room"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/substitution_all_entry_textViewOther"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_weight="@integer/substitution_all_other"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        android:textIsSelectable="true" />

</LinearLayout>